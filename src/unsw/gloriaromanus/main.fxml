        <Label prefHeight="17.0" fx:id="topBarWealth" prefWidth="88.0" text="Wealth: 0"/>
        <Label prefHeight="17.0" fx:id="topBarGoal" prefWidth="194.0" text="Goals: Conquer and Wealth Or Gold"/>
    </children>
    <padding>
        <Insets left="5.0" top="2.0" />
    </padding>
            <background>
                <Background>
                    <fills>
                        <BackgroundFill>
                            <fill>
                                <Color opacity="0.8"/>
                            </fill>
                        </BackgroundFill>
                    </fills>
                </Background>
            </background>
    </HBox>

<VBox fx:id="provinceWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="343.0" prefWidth="219.0" styleClass="panel-region" visible="false" StackPane.alignment="BOTTOM_RIGHT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="pWProvinceName" text="Province Name" />
      <HBox prefHeight="19.0" prefWidth="209.0">
         <children>
            <Label text="Owned by: " />
            <Label fx:id="pWFactionName" prefHeight="17.0" prefWidth="124.0" text="Faction" />
         </children>
      </HBox>
      <VBox prefHeight="68.0" prefWidth="209.0">
         <children>
            <ComboBox fx:id="pWRecruitList" prefHeight="25.0" prefWidth="221.0" />
            <Button fx:id="pWRecruitButton" mnemonicParsing="false" text="Recruit" />
         </children>
