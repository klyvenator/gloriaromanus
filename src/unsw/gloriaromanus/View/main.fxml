                        <Button mnemonicParsing="false" text="Move" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="44.0" prefWidth="107.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleInvadeButton" text="Invade" />
                     </children>
                  </VBox>
               </children>
