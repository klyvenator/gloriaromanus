            <children>
               <Label text="Province Wealth: " />
               <Label text="0" fx:id="sWProvinceWealth"/>
            </children>
         </HBox>
         <ListView prefHeight="200.0" prefWidth="200.0" />
         <Button mnemonicParsing="false" fx:id="sWConfirmButton"  onAction="#handlesWConfirmButton" text="Confirm invade" />
      </children>
