        <Label prefHeight="17.0" fx:id="topBarWealth" prefWidth="88.0" text="Wealth: 0"/>
        <Label prefHeight="17.0" fx:id="topBarGoal" prefWidth="194.0" text="Goals: Conquer and Wealth Or Gold"/>
    </children>
    <padding>
        <Insets left="5.0" top="2.0" />
    </padding>
            <background>
                <Background>
                    <fills>
                        <BackgroundFill>
                            <fill>
                                <Color opacity="0.8"/>
                            </fill>
                        </BackgroundFill>
                    </fills>
                </Background>
            </background>
    </HBox>


